<% content_for :title, " â€” Index" %>
<% content_for :description, "An archive of all the wheels created." %>

<div class="container-fluid" style="margin:3em 0 5em 0">
  <div class="row">

    <div class="col-lg-10 col-lg-offset-1 col-md-12">
      <div class="step">Archive</div>
      <div class="title">All Wheels</div>

      <table class="table table-striped table-bordered" style="margin-bottom:3em">
        <thead>
          <th style="width:5%;text-align:center">ID</th>
          <th style="width:30%;text-align:center">Created</th>
          <th style="width:30%;text-align:center">Updated</th>
          <th style="width:35%;text-align:center">Options</th>
        </thead>
        <tbody>
          <% @wheels.each do |wheel| %>
            <tr>
              <td><%= wheel.id %></td>
              <td><%= wheel.created_at.strftime("%d %B %Y at %H:%M") %></td>
              <td><%= wheel.updated_at.strftime("%d %B %Y at %H:%M") %></td>
              <td>
                <%= link_to 'Show', wheel %> <span class="middot">&middot;</span>
                <%= link_to 'Edit', edit_wheel_path(wheel) %> <span class="middot">&middot;</span>
                <%= link_to 'Delete', wheel, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>

