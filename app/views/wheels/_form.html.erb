          <td align="center"><%= f.check_box :ind_6_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_6_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_6_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_6_h, label: false %></td>
        </tr>
        </tr>
          <td>7</td>
          <td align="left">Capability Building</td>
          <td align="center"><%= f.check_box :ind_7_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_7_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_7_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_7_h, label: false %></td>
        </tr>
        </tr>
          <td>8</td>
          <td align="left">Deliverying Continuous Improvement</td>
          <td align="center"><%= f.check_box :ind_8_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_8_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_8_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_8_h, label: false %></td>
        </tr>
        </tr>
          <td>9</td>
          <td align="left">Creating Sustainable Success</td>
          <td align="center"><%= f.check_box :ind_9_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_9_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_9_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_9_h, label: false %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p>
        Add a <strong>title</strong> in the field below, then click <strong>Create Wheel</strong>.<br>
        <i>The title can only include letters and numbers.</i>
      </p>
      <%= f.input :title, required: true, label: false %>
      <%= f.button :submit, @submit_wording, class: "btn btn-lg btn-primary" %>
    </div>
  </div>

<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $("#wheel_title").focus(function() { $(this).select(); } );
  });
</script>
