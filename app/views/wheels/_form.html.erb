<%= simple_form_for(@wheel, html: { class: 'form-horizontal' }) do |f| %>

  <% if @wheel.errors.any? %>
    <div class="alert alert-danger">
      <strong>There <%= @wheel.errors.count == 1 ? 'is' : 'are' %> <%= pluralize(@wheel.errors.count, "error") %></strong>.
      Please review below before clicking <strong>Create Wheel</strong> again.
    </div>
  <% end %>

  <div class="table-responsive" style="margin-bottom:3em">
    <table class="table table-striped table-bordered">
      <thead>
        <th colspan="2" style="width:40%">Indicator</th>
        <th style="width:15%;text-align:center">Developed</th>
        <th style="width:15%;text-align:center">Established</th>
        <th style="width:15%;text-align:center">Advanced</th>
        <th style="width:15%;text-align:center">High Performing</th>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td align="left">Leading and Inspiring People</td>
          <td><%= f.check_box :ind_1_d, label: false %></td>
          <td><%= f.check_box :ind_1_e, label: false %></td>
          <td><%= f.check_box :ind_1_a, label: false %></td>
          <td><%= f.check_box :ind_1_h, label: false %></td>
        </tr>
        <tr>
          <td>2</td>
          <td align="left">Living the Organisation's Values and Behaviours</td>
          <td align="center"><%= f.check_box :ind_2_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_2_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_2_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_2_h, label: false %></td>
        </tr>
        <tr>
          <td>3</td>
          <td align="left">Empowering and Involving People</td>
          <td align="center"><%= f.check_box :ind_3_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_3_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_3_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_3_h, label: false %></td>
        </tr>
        <tr>
          <td>4</td>
          <td align="left">Managing Performance</td>
          <td align="center"><%= f.check_box :ind_4_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_4_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_4_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_4_h, label: false %></td>
        </tr>
        <tr>
          <td>5</td>
          <td align="left">Recognising and Rewarding Performance</td>
          <td align="center"><%= f.check_box :ind_5_d, label: false %></td>
          <td align="center"><%= f.check_box :ind_5_e, label: false %></td>
          <td align="center"><%= f.check_box :ind_5_a, label: false %></td>
          <td align="center"><%= f.check_box :ind_5_h, label: false %></td>
        </tr>
          <td>6</td>
