<div class="push"></div>

<div class="container">

  <h1>Welcome</h1>
  <p style="margin-bottom:2em">Please log in using the form below to continue.</p>

  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, placeholder: "Email", label: false %>
        <%= f.input :password, required: false, placeholder: "Password", label: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>

  </div>

</div>
